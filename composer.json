{
    "name": "yawik/standard",
    "description": "Skeleton for Yawik Applications",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "mvc",
        "zf"
    ],
    "homepage": "http://framework.zend.com/",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0 || ^7.1 || 7.2",
        "zendframework/zend-component-installer": "^1.1 | ^2.0",
        "yawik/core": ">=0.32@dev",
        "composer/installers": "^1.0",
        "yawik/composer-plugin": ">=0.32@dev"
    },
    "require-dev": {
        "zendframework/zend-test": "^3.2",
        "yawik/behat": "0.32.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Demo\\": "src/Demo/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DemoTest\\": "src/Demo/test/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.32-dev"
        },
        "installer-types": ["yawik-module"],
        "installer-paths": {
            "modules/{$name}": ["type:yawik-module"]
        },
        "zf": {
            "component-whitelist": [
                "yawik/core",
                "yawik/auth",
                "yawik/cv",
                "yawik/applications",
                "yawik/jobs",
                "yawik/settings",
                "yawik/pdf",
                "yawik/geo",
                "yawik/organizations",
                "zendframework/*"
            ]
        }
    },
    "scripts": {
        "auto-scripts": [
            "@cache-clear"
        ],
        "cache-clear": "./vendor/bin/yawik clear-cache",
        "install-assets": "./vendor/bin/yawik assets-install --relative",
        "serve": "php -S localhost:8080 -t public/",
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
