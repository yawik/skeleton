{
    "name": "yawik/standard",
    "description": "Skeleton for Yawik Applications",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "mvc",
        "zf"
    ],
    "homepage": "http://framework.zend.com/",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0 || ^7.1 || 7.2",
        "zendframework/zend-component-installer": "^1.0 || ^0.7 || ^1.0.0-dev@dev",
        "yawik/core": "^0.32@dev",
        "yawik/demo-skin": "^0.32@dev",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "zendframework/zend-test": "^3.2",
        "yawik/behat": "0.32.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Demo\\": "src/Demo/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DemoTest\\": "src/Demo/test/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.32-dev"
        },
        "installer-types": ["yawik-module"],
        "installer-paths": {
            "modules/{$name}": ["type:yawik-module"]
        }
    },
    "scripts": {
        "auto-scripts": [
            "@cache-clear",
            "@install-assets",
            "npm install"
        ],
        "cache-clear": "./vendor/bin/yawik clear-cache",
        "install-assets": "./vendor/bin/yawik assets-install --relative",
        "serve": "php -S localhost:8080 -t public/",
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
